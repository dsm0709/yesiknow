<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#eeeeee" >

    <LinearLayout
        android:id="@+id/mainbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title"
            android:gravity="center_vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:gravity="center_vertical" >

                <RelativeLayout
                    android:id="@+id/mainbar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title2"
                    android:gravity="center_vertical" >

                    <RelativeLayout
                        android:id="@+id/lo1"
                        android:layout_width="fill_parent"
                        android:layout_height="52dip"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical" >

                        <ImageButton
                            android:id="@+id/per_back"
                            android:layout_width="50dip"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dip"
                            android:layout_marginTop="10dip"
                            android:background="@drawable/btn_weight2"
                            android:paddingLeft="8dip"
                            android:paddingRight="20dip"
                            android:scaleType="centerInside"
                            android:src="@drawable/btn_back" />

                        <TextView
                            android:id="@+id/detailname"
                            android:layout_width="200dip"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="13dip"
                            android:layout_marginLeft="5dip"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="center"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:text="个人信息"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="#ffffffff" />
                        <ImageButton
                            android:id="@+id/per_setting"
                            android:layout_width="50dip"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dip"
                            android:layout_marginTop="10dip"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/btn_weight2"
                            android:paddingRight="10dip"
                            android:paddingLeft="20dip"
                            android:scaleType="centerInside"
                            android:src="@drawable/bkg_setting" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lo2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lo1"
                        android:gravity="center" >

                        <org.yesiknow.customview.CircularImage
                            android:id="@+id/personal_photo"
                            android:layout_width="80dip"
                            android:layout_height="80dip"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="50dip"
                            android:src="@drawable/user_photo" />
                    </RelativeLayout>
                    <RelativeLayout 
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lo2"
                        >
                        <LinearLayout 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            
                            <ImageView
                                android:id="@+id/per_male"
                                android:layout_width="27dip"
                                android:layout_height="27dip"
                                android:background="@drawable/male"
                                ></ImageView>
                            
                            <ImageView
                                android:id="@+id/per_female"
                                android:layout_width="27dip"
                                android:layout_height="27dip"
                                android:background="@drawable/female_no"
                                ></ImageView>
                            
                        </LinearLayout>
                        
                        <LinearLayout 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_alignParentRight="true"
                            >
                            <TextView
                                android:id="@+id/per_con"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="37"
                                android:textColor="#ffffff"
                                android:textSize="32sp"
                                android:gravity="center"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="消费预算"
                                android:textColor="#ffffff"
                                ></TextView>
                            
                        </LinearLayout>
                        
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/mainbody"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainbar" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="20dip"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  口味喜好"
                            android:textColor="#555555"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:background="@drawable/shape" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="5dip"
                                android:layout_marginTop="10dip"
                                android:gravity="center_vertical"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dip"
                                    android:layout_marginRight="30dip"
                                    android:text="甜"
                                    android:textSize="16sp"
                                     />

                                <ImageView
                                    android:id="@+id/per_star1_1"
                                    android:layout_width="25dip"
                                    android:layout_height="25dip"
                                    android:layout_marginLeft="5dip"
                                    android:layout_marginRight="5dip"
                                    android:background="@drawable/fav_star1" />

                                <ImageView
                                    android:id="@+id/per_star1_2"
                                    android:layout_width="25dip"
                                    android:layout_height="25dip"
                                    android:layout_marginLeft="5dip"
                                    android:layout_marginRight="5dip"
                                    android:background="@drawable/fav_star1" />

                                <ImageView
                                    android:id="@+id/per_star1_3"
                                    android:layout_width="25dip"
                                    android:layout_height="25dip"
                                    android:layout_marginLeft="5dip"
                                    android:layout_marginRight="5dip"
                                    android:background="@drawable/fav_star_no" />

                                <ImageView
                                    android:id="@+id/per_star1_4"
                                    android:layout_width="25dip"
                                    android:layout_height="25dip"
                                    android:layout_marginLeft="5dip"
                                    android:layout_marginRight="5dip"
                                    android:background="@drawable/fav_star_no" />

                                <ImageView
                                    android:id="@+id/per_star1_5"
                                    android:layout_width="25dip"
                                    android:layout_height="25dip"
                                    android:layout_marginLeft="5dip"
                                    android:layout_marginRight="5dip"
                                    android:background="@drawable/fav_star_no" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="5dip"
                                android:layout_marginTop="10dip"
                                android:gravity="center_vertical"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dip"
                                    android:layout_marginRight="30dip"
                                    android:text="酸"
                                    android:textSize="16sp"
                                     />

                                <ImageView
                                    android:id="@+id/per_star2_1"
                                    android:layout_width="25dip"
                                    android:layout_height="25dip"
                                    android:layout_marginLeft="5dip"
                                    android:layout_marginRight="5dip"
                                    android:background="@drawable/fav_star1" />

                                <ImageView
                                    android:id="@+id/per_star2_2"
                                    android:layout_width="25dip"
                                    android:layout_height="25dip"
                                    android:layout_marginLeft="5dip"
                                    android:layout_marginRight="5dip"
                                    android:background="@drawable/fav_star_no" />

                                <ImageView
                                    android:id="@+id/per_star2_3"
                                    android:layout_width="25dip"
                                    android:layout_height="25dip"
                                    android:layout_marginLeft="5dip"
                                    android:layout_marginRight="5dip"
                                    android:background="@drawable/fav_star_no" />

                                <ImageView
                                    android:id="@+id/per_star2_4"
                                    android:layout_width="25dip"
                                    android:layout_height="25dip"
                                    android:layout_marginLeft="5dip"
                                    android:layout_marginRight="5dip"
                                    android:background="@drawable/fav_star_no" />

                                <ImageView
                                    android:id="@+id/per_star2_5"
                                    android:layout_width="25dip"
                                    android:layout_height="25dip"
                                    android:layout_marginLeft="5dip"
                                    android:layout_marginRight="5dip"
                                    android:background="@drawable/fav_star_no" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="5dip"
                                android:layout_marginTop="10dip"
                                android:gravity="center_vertical"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dip"
                                    android:layout_marginRight="30dip"
                                    android:text="辣"
                                    android:textSize="16sp"
                                     />

                                <ImageView
                                    android:id="@+id/per_star3_1"
                                    android:layout_width="25dip"
                                    android:layout_height="25dip"
                                    android:layout_marginLeft="5dip"
                                    android:layout_marginRight="5dip"
                                    android:background="@drawable/fav_star1" />

                                <ImageView
                                    android:id="@+id/per_star3_2"
                                    android:layout_width="25dip"
                                    android:layout_height="25dip"
                                    android:layout_marginLeft="5dip"
                                    android:layout_marginRight="5dip"
                                    android:background="@drawable/fav_star1" />

                                <ImageView
                                    android:id="@+id/per_star3_3"
                                    android:layout_width="25dip"
                                    android:layout_height="25dip"
                                    android:layout_marginLeft="5dip"
                                    android:layout_marginRight="5dip"
                                    android:background="@drawable/fav_star1" />

                                <ImageView
                                    android:layout_width="25dip"
                                    android:id="@+id/per_star3_4"
                                    android:layout_height="25dip"
                                    android:layout_marginLeft="5dip"
                                    android:layout_marginRight="5dip"
                                    android:background="@drawable/fav_star1" />

                                <ImageView
                                    android:layout_width="25dip"
                                    android:id="@+id/per_star3_5"
                                    android:layout_height="25dip"
                                    android:layout_marginLeft="5dip"
                                    android:layout_marginRight="5dip"
                                    android:background="@drawable/fav_star1" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="5dip"
                                android:layout_marginTop="10dip"
                                android:gravity="center_vertical"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dip"
                                    android:layout_marginRight="30dip"
                                    android:text="咸"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="25dip"
                                    android:layout_height="25dip"
                                    android:id="@+id/per_star4_1"
                                    android:layout_marginLeft="5dip"
                                    android:layout_marginRight="5dip"
                                    android:background="@drawable/fav_star1" />

                                <ImageView
                                    android:id="@+id/per_star4_2"
                                    android:layout_width="25dip"
                                    android:layout_height="25dip"
                                    android:layout_marginLeft="5dip"
                                    android:layout_marginRight="5dip"
                                    android:background="@drawable/fav_star1" />

                                <ImageView
                                    android:id="@+id/per_star4_3"
                                    android:layout_width="25dip"
                                    android:layout_height="25dip"
                                    android:layout_marginLeft="5dip"
                                    android:layout_marginRight="5dip"
                                    android:background="@drawable/fav_star1" />

                                <ImageView
                                    android:id="@+id/per_star4_4"
                                    android:layout_width="25dip"
                                    android:layout_height="25dip"
                                    android:layout_marginLeft="5dip"
                                    android:layout_marginRight="5dip"
                                    android:background="@drawable/fav_star_no" />

                                <ImageView
                                    android:layout_width="25dip"
                                    android:id="@+id/per_star4_5"
                                    android:layout_height="25dip"
                                    android:layout_marginLeft="5dip"
                                    android:layout_marginRight="5dip"
                                    android:background="@drawable/fav_star_no" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  我的收藏"
                            android:textColor="#555555"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip" >

                        <ScrollView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape" >

                            <ListView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >
                            </ListView>
                        </ScrollView>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/tool_bar"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@drawable/tool_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/optimallist"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/imagebutton_background"
            android:drawableTop="@drawable/toolbar_lightbulb_1"
            android:paddingTop="10.0dip"
            android:text="猜你喜欢"
            android:textColor="#ffffffff"
            android:textSize="10.0sp" />

        <Button
            android:id="@+id/generallist"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/imagebutton_background"
            android:drawableTop="@drawable/toolbar_home_1"
            android:paddingTop="10.0dip"
            android:text="附近店铺"
            android:textColor="#ffffffff"
            android:textSize="10.0sp" />

        <Button
            android:id="@+id/personal"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/imagebutton_background"
            android:drawableTop="@drawable/toolbar_user_1"
            android:paddingTop="10.0dip"
            android:text="个人信息"
            android:textColor="#ffffffff"
            android:textSize="10.0sp" />

        <Button
            android:id="@+id/more"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/imagebutton_background"
            android:drawableTop="@drawable/toolbar_more"
            android:paddingTop="10.0dip"
            android:text="更多"
            android:textColor="#ffffffff"
            android:textSize="10.0sp" />
    </LinearLayout>

</RelativeLayout>